<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_round_white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:text="详情"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_filename"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="文件名称："
            android:textSize="12sp"
            android:textColor="@color/font_common_1"/>
        <TextView
            android:id="@+id/tv_filetype"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="文件种类："
            android:textSize="12sp"
            android:textColor="@color/font_common_1"/>
        <TextView
            android:id="@+id/tv_fileSize"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="文件大小："
            android:textSize="12sp"
            android:textColor="@color/font_common_1"/>
        <TextView
            android:id="@+id/tv_fileinclude"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="文件分析："
            android:textSize="12sp"
            android:textColor="@color/font_common_1"/>
        <TextView
            android:id="@+id/tv_updatetime"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="修改时间："
            android:textSize="12sp"
            android:textColor="@color/font_common_1"/>
        <TextView
            android:id="@+id/tv_filepath"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="文件路径："
            android:textSize="12sp"
            android:textColor="@color/font_common_1"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/commom_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_dialog_right_white"
            android:gravity="center"
            android:layout_weight="1.0"
            android:text="确定"
            android:textSize="12sp"
            android:textColor="@color/font_blue"/>

    </LinearLayout>


</LinearLayout>